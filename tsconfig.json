{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom", "es6"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@mamby/*": ["./*"]
    },
    "types": ["@nuxt/types", "node", "reflect-metadata"]
  },
  "exclude": ["node_modules", ".nuxt", "dist", "types"]
}
